<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SettingsActivity"
    tools:showIn="@layout/activity_settings">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:labelFor="@id/spinner_municipality"
                android:textColor="?android:attr/textColorSecondary"
                android:text="@string/label_municipality"
                tools:text="@string/label_municipality" />

            <Spinner
                android:id="@+id/spinner_municipality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:popupBackground="@color/backgroundSecondary"
                android:spinnerMode="dropdown" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="?attr/colorPrimary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:labelFor="@id/spinner_day_of_week"
                android:textColor="?android:attr/textColorSecondary"
                android:text="@string/label_day_of_week"
                tools:text="@string/label_day_of_week" />

            <Spinner
                android:id="@+id/spinner_day_of_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:popupBackground="@color/backgroundSecondary"
                android:spinnerMode="dropdown" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="?attr/colorPrimary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:labelFor="@id/spinner_garbage_week"
                android:textColor="?android:attr/textColorSecondary"
                android:text="@string/label_garbage_week"
                tools:text="@string/label_garbage_week" />

            <Spinner
                android:id="@+id/spinner_garbage_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:popupBackground="@color/backgroundSecondary"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/text_garbage_weekly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:visibility="gone"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="?android:attr/textColorPrimary"
                android:text="@string/weekly"
                tools:text="@string/weekly" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="?attr/colorPrimary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:labelFor="@id/spinner_recycling_week"
                android:textColor="?android:attr/textColorSecondary"
                android:text="@string/label_recycling_week"
                tools:text="@string/label_recycling_week" />

            <Spinner
                android:id="@+id/spinner_recycling_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:popupBackground="@color/backgroundSecondary"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/text_recycling_weekly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:visibility="gone"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="?android:attr/textColorPrimary"
                android:text="@string/weekly"
                tools:text="@string/weekly" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="?attr/colorPrimary" />

            <Switch
                android:id="@+id/switch_notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorSecondary"
                android:text="@string/label_notifications"
                tools:text="@string/label_notifications" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="?attr/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_notify_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="start"
                    android:labelFor="@id/time_notification"
                    android:textColor="?android:attr/textColorSecondary"
                    android:text="@string/label_notify_time"
                    tools:text="@string/label_notify_time" />

                <EditText
                    android:id="@+id/time_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints="false"
                    android:clickable="true"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="end"
                    android:inputType="none" />

            </LinearLayout>

            <Spinner
                android:id="@+id/spinner_notify_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:popupBackground="@color/backgroundSecondary"
                android:spinnerMode="dropdown" />

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>